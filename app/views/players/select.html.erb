<% @players.sort_by { |player| player.cumulative_wins }.each do |player| %>
  <tr>
    <td><img src="<%= player.avatar %>" alt="<%= player.name %> avatar" /></td>
    <td><%= player.name %></td>
    <td><%= player.cumulative_wins %></td>
    <td><%= player.total_games %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

