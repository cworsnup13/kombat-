<div style="width: 900px;" align="center">
<h1>FIGHT!</h1>

<form method="post" action="/end_game">
<input type="hidden" id="player_one_id" name="player_one_id" value="<%= @player_one.id %>" />
<input type="hidden" id="player_two_id" name="player_two_id" value="<%= @player_two.id %>" />


<div style="float: left;">
<img width="256" height="256" src="<%= @player_one.avatar %>" />
<br />
Score: <input type="text" id="player_one_score" name="player_one_score"/>
</div>

<div style="float: right;">
<img width="256" height="256" src="<%= @player_two.avatar %>" />
<br />
Score: <input type="text" id="player_two_score" name="player_two_score"/>
</div>

<div align="center">
<input type="submit" value="END GAME" />
</div>

</form>
</div>
